{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available when you add "Blog posts" section in the Theme Editor.
{%- endcomment -%}
<section class="blog-posts-section">
  {% if section.settings.title != blank %}
    <div class="wrapper">
      <h2 class="blog-post__title">{{ section.settings.title | escape }}</h2>
      <div class="rte descrption">{{ section.settings.description }}</div>
    </div>
  {% endif %}

  {%- assign blog = blogs[section.settings.blog] -%}

  <div class="desktop-container">
    <div class="mobile-scroll-container">
      <div class="teaser-container">
        {% for article in blog.articles limit: 3 %}
          {% if article.image %}
            <a class="blog-post__item lazyload" data-bgset="{% include 'responsive-bg-image', image: article.image %}" title="{{article.title}}" href="{{article.url}}">
              <h2 class="title"> {{ article.title }} </h2>
            </a>
          {% else %}
            <a class="blog-post__item lazyload" title="{{article.title}}" href="{{article.url}}">
              <h2 class="title"> {{ article.title }} </h2>
            </a>
          {% endif %}
          </a>
        {% endfor %}
      </div>
    </div>
    <div class="extro">
      <p>{{ "blog_index.see_more" | t }}</p>
      <p><a href="{{blog.url}}">{{ blog.title }} &rarr;</a></div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Blog posts",
    "settings": [
      {
        "id": "blog",
        "type": "blog",
        "label": "Blog"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Blog posts"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      }
    ],
    "presets": [
      {
        "name": "Blog posts",
        "category": "Blog",
        "settings": {
          "blog": "News"
        }
      }
    ]
  }
{% endschema %}
