{% include 'hero' with section: section, css_class: 'bottles full-height' %}

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Hustle"
      },
      {
        "id": "description",
        "type": "html",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "name": "Hero image",
        "type": "hero_image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      },
      {
        "name": "Floating image",
        "type": "floating_image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "product_link",
            "label": "URL",
            "default": "#product-id"
          }
        ]
      },
      {
        "name": "Call to Action",
        "type": "call_to_action",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
          {
            "id": "url",
            "type": "url",
            "label": "URL"
          }
        ]
      }
    ]
  }
{% endschema %}