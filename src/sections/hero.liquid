<h1>{{section.settings.title}}</h1>
<div class='description rte'>{{section.settings.description}}</div>
{% for block in section.blocks %}
  <div class="content-blocks" {{ block.shopify_attributes }}>
    {% case block.type %}

      {% when 'hero_image' %}
      {% include 'responsive-image' with
          image: block.settings.image,
          max_width: 400,
          max_height: 400 %}

      {% when 'floating_image' %}
      <a href="{{block.settings.product_link}}">
        {% include 'responsive-image' with
          image: block.settings.image,
          max_width: 400,
          max_height: 400 %}
      </a>

      {% when 'call_to_action' %}
      <a href="{{block.settings.url}}" class="cta">{{block.settings.title}}</a>

    {% endcase %}
  </div>
{% endfor %}

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Hustle"
      },
      {
        "id": "description",
        "type": "html",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "name": "Hero image",
        "type": "hero_image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      },
      {
        "name": "Floating image",
        "type": "floating_image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "product_link",
            "label": "URL",
            "default": "#product-id"
          }
        ]
      },
      {
        "name": "Call to Action",
        "type": "call_to_action",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
          {
            "id": "url",
            "type": "url",
            "label": "URL"
          }
        ]
      }
    ]
  }
{% endschema %}