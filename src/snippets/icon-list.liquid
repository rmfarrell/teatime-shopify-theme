{%- endcomment -%}

<section id="the-basics" class="icon-list">
  <div class="wrapper pale-green">
    <h2>{{ icon_list_headline }}</h2>
    <div class="flex-columns">
      {% if icon_list_1_icon != blank and icon_list_1_title != blank and icon_list_1_description != blank %}
        <div class="column">
          <div class="img-container icon">
            <img src="{{ icon_list_1_icon | img_url }}">
          </div>
          <div class="text-container">
            <h4>{{ icon_list_1_title }}</h4>
            <div class="description rte">{{ icon_list_1_description }}</div>
          </div>
        </div>
      {% endif %}
      {% if icon_list_2_icon != blank and icon_list_2_title != blank and icon_list_2_description != blank %}
        <div class="column">
          <div class="img-container icon">
            <img src="{{ icon_list_2_icon | img_url }}">
          </div>
          <div class="text-container">
            <h4>{{ icon_list_2_title }}</h4>
            <div class="description rte">{{ icon_list_2_description }}</div>
          </div>
        </div>
      {% endif %}
      {% if icon_list_3_icon != blank and icon_list_3_title != blank and icon_list_3_description != blank %}
        <div class="column">
          <div class="img-container icon">
            <img src="{{ icon_list_3_icon | img_url }}">
          </div>
          <div class="text-container">
            <h4>{{ icon_list_3_title }}</h4>
            <div class="description rte">{{ icon_list_3_description }}</div>
          </div>
        </div>
      {% endif %}
      {% if icon_list_4_icon != blank and icon_list_4_title != blank and icon_list_4_description != blank %}
        <div class="column">
          <div class="img-container icon">
            <img src="{{ icon_list_4_icon | img_url }}">
          </div>
          <div class="text-container">
            <h4>{{ icon_list_4_title }}</h4>
            <div class="description rte">{{ icon_list_4_description }}</div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>