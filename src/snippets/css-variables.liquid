<style>
  {{ settings.font_heading | font_face }}
  {{ settings.font_body | font_face }}

  {%- assign font_body_bold = settings.font_body | font_modify: 'weight', 'bolder' -%}
  {%- assign font_body_bold_italic = font_body_bold | font_modify: 'style', 'italic' -%}

  {{ font_body_bold | font_face }}
  {{ font_body_bold_italic | font_face }}

  :root {
    --color-accent: {{ settings.color_accent }};
    --color-body-text: {{ settings.color_body_text }};
    --color-main-background: {{ settings.color_main_bg }};
    --color-border: {{ settings.color_body_text | color_lighten: 50 }};
  }
  {% comment %} 
    Slate is currently ignoring font files, they must be uploaded manually.
    Go to theme > customize > edit code and add the files to the base of the assets folder.
  {% endcomment %}
  @font-face {
    font-family: 'Calibre-remote';
    src:url('{{ 'Calibre-Bold.otf' | asset_url }}');
    font-weight: bold;
    font-display: block;
  }
  @font-face {
    font-family: 'Calibre-remote';
    src:url('{{ 'Calibre-Semibold.otf' | asset_url }}');
    font-weight: 500;
    font-style: normal;
    font-display: block;
  }
  @font-face {
    font-family: 'Calibre-remote';
    src:url('{{ 'Calibre-Regular.otf' | asset_url }}');
    font-weight: normal;
    font-style: normal;
    font-display: block;
  }
  @font-face {
    font-family: 'Calibre-remote';
    src:url('{{ 'Calibre-RegularItalic.otf' | asset_url }}');
    font-weight: normal;
    font-style: italic;
    font-display: block;
  }
</style>
